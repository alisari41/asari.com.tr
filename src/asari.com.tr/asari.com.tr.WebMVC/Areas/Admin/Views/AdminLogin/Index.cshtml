@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}
@* GİRİŞ SAYFASI *@
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <title>Admin Girişi</title>
</head>
<body>

    @* Hata Mesajlarını göstermek için farklı bir cshtml dosyası kullanılmıştır. *@
    @await Html.PartialAsync("~/Areas/Admin/Views/PartialView_GenelKullanilanKodlar/_PartialViewError.cshtml")

    <div class="container-fluid px-3">
        <div class="row min-vh-100">
            <div class="col-md-5 col-lg-6 col-xl-4 px-lg-5 d-flex align-items-center">
                <div class="w-100 py-5">
                    <div class="text-center">
                        <img src="~/dist/img/Bimser-Logo.png" alt="" style="max-width: 175px;" class="img-fluid mb-6 rounded">
                        <h1 class="display-4 mb-3">Yönetici Giriş</h1>
                    </div>
                    <form class="form-validate " form method="post">
                        <div class="form-group">
                            <label>E-mail </label>
                            <input name="Email" type="email" id="txtGirisEmail" placeholder="alisari41@outlook.com" autocomplete="off" required data-msg="Lütfen e-postanızı giriniz." value="alisari41@outlook.com" class="form-control">
                        </div>
                        <div class="form-group mb-4">
                            <div class="row">
                                <div class="col">
                                    <label>Şifre</label>
                                </div>

                            </div>
                            <input name="Password" placeholder="Şifre" id="txtGirisPassword" type="password" required data-msg="Lütfen şifrenizi giriniz." value="22912088aA*" class="form-control">
                        </div>

                        <button type="submit" id="btnSingIn" class="btn btn-lg btn-block btn-outline-primary mb-3" style="border: 2px solid blue;">Giriş Yap</button>
                        @*@
                        @*<a href="/Admin/Users/Create" class="btn btn-outline-info" style=" text-decoration: none;">Yönetici paneli ile işiniz bittiyse sitemize dönebilirsiniz.</a>*@
                        <p class="text-center"><small class="text-muted text-center"><a href="/Admin/Users/Register" id="btnSignUp" style="font-weight:bold;text-decoration:none">Henüz bir hesabınız yok mu? Kayıt ol</a>.</small></p>
                    </form>                                                             @*   BURASI  DEĞİŞECEKK    *@
                </div>
            </div>
            <div class="col-12 col-md-7 col-lg-6 col-xl-8 d-none d-lg-block">
                <div style="background-image: url(https://i.hizliresim.com/IFFxQK.jpg); " class="bg-cover h-100 mr-n3"></div>
            </div>
        </div>
    </div>
</body>
</html>

