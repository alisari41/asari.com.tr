@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model asari.com.tr.Application.Features.LicensesAndCertifications.Commands.Update.UpdateLicenseAndCertificationCommand;

@{
    ViewData["Title"] = "Lisans veya sertifika bilgilerini güncelle";
}


@* Hata Mesajlarını göstermek için farklı bir cshtml dosyası kullanılmıştır. *@
@await Html.PartialAsync("~/Areas/Admin/Views/PartialView_GenelKullanilanKodlar/_PartialViewError.cshtml")


<h2>Lisans veya sertifika Bilgilerini Güncelle</h2>
<hr />

<form asp-action="Update" asp-route-Id="@Model.Id" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label class="control-label col-md-3">Ad</label>
        <div class="col-md-9">
            <input type="text" asp-for="Name" placeholder="Örn: Microsoft certified network associate security" class="form-control text-info" />
            <span asp-validation-for="Name" class="text-danger" id="txtKotrol"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Veren Organizasyon</label>
        <div class="col-md-9">
            <input type="text" asp-for="IssuingOrganization" placeholder="Örn: Microsoft" class="form-control text-info" />
            <span asp-validation-for="IssuingOrganization" class="text-danger" id="txtKotrol"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Alınma tarihi</label>
        <div class="col-md-9">
            <input type="date" asp-for="IssueDate" class="form-control text-info" />
            <span asp-validation-for="IssueDate" class="text-danger" id="txtKotrol"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Sona erme tarihi</label>
        <div class="col-md-9">
            <input type="date" asp-for="ExpirationDate" class="form-control text-info" />
            <span asp-validation-for="ExpirationDate" class="text-danger" id="txtKotrol"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Image URL</label>
        <div class="col-md-9">
            <input type="text" asp-for="ImagegUrl" class="form-control text-info" />
            <img src="@Model.ImagegUrl" alt="HTML tutorial" style="width:650px;height:400px;">
            <span asp-validation-for="ImagegUrl" class="text-danger" id="txtKotrol"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Yeterlilik kimliği</label>
        <div class="col-md-9">
            <input type="text" asp-for="CredentialId" class="form-control text-info" />
            <span asp-validation-for="CredentialId" class="text-danger" id="txtKotrol"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Yeterlilik URL‘si</label>
        <div class="col-md-9">
            <input type="text" asp-for="CredentialUrl" class="form-control text-info" />
            <span asp-validation-for="CredentialUrl" class="text-danger" id="txtKotrol"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn " id="btnEdit">
                <span id="btnEdit__text">Güncelle</span>
                <svg id="svgEdit" viewBox="0 0 512 512">
                    <path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"></path>
                </svg>
            </button>
        </div>
    </div>
</form>

<a asp-action="GetList" class="btn btn-outline-warning mb-2 ml-2" asp-route-Page="0" asp-route-PageSize="15">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-skip-backward-btn-fill" viewBox="0 0 16 16">
        <path d="M0 12V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm11.21-6.907L8.5 7.028V5.5a.5.5 0 0 0-.79-.407L5 7.028V5.5a.5.5 0 0 0-1 0v5a.5.5 0 0 0 1 0V8.972l2.71 1.935a.5.5 0 0 0 .79-.407V8.972l2.71 1.935A.5.5 0 0 0 12 10.5v-5a.5.5 0 0 0-.79-.407z" />
    </svg> Geri Dön
</a>

<script>
    // Eğer Statu true ise Bitiş tarihi alanını disable yap
    window.onload = function () {
        var checkBox = document.querySelector('input[name="Statu"]');
        var endDate = document.querySelector('#endDate');

        if (checkBox.checked) {
            endDate.disabled = true;
        }

        checkBox.addEventListener('change', function () {
            endDate.disabled = this.checked;
        });
    };
</script>