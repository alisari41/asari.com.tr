@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="row">
    <div class="col-10">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                @if (Model.HasPrevious)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="GetList" asp-route-Page="@(Model.Index - 1)" asp-route-PageSize="@Model.Size" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.Pages; i++)
                {
                    <li class="page-item @(Model.Index == (i - 1) ? "active" : "")">
                        <a class="page-link" asp-action="GetList" asp-route-Page="@(i - 1)" asp-route-PageSize="@Model.Size">@i</a>
                    </li>
                }

                @if (Model.HasNext)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="GetList" asp-route-Page="@(Model.Index + 1)" asp-route-PageSize="@Model.Size" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <!-- Default dropup button -->
    <div class="col-1 btn-group dropup justify-content-end">
        <button type="button" class="btn btn-secondary dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @Model.Size
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item @(Model.Size == 10 ? "active" : "")" asp-action="GetList" asp-route-Page="0" asp-route-PageSize="10">10</a>

            <a class="dropdown-item @(Model.Size == 15 ? "active" : "")" asp-action="GetList" asp-route-Page="0" asp-route-PageSize="15">15</a>

            <a class="dropdown-item @(Model.Size == 20 ? "active" : "")" asp-action="GetList" asp-route-Page="0" asp-route-PageSize="20">20</a>

            <a class="dropdown-item @(Model.Size == 30 ? "active" : "")" asp-action="GetList" asp-route-Page="0" asp-route-PageSize="30">30</a>

            <a class="dropdown-item @(Model.Size == 50 ? "active" : "")" asp-action="GetList" asp-route-Page="0" asp-route-PageSize="50">50</a>

            <a class="dropdown-item @(Model.Size == 100 ? "active" : "")" asp-action="GetList" asp-route-Page="0" asp-route-PageSize="100">100</a>
        </div>
    </div>
</div>